{% extends 'front.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('front/scss/restoDon/css/root.css') }}">
{% endblock %}

{% block body %}
    <h1>Tarifrestos list</h1>

    <table style="justify-content: center; margin-left: 39%;">
        <thead>
            <tr>
                <th>Idresto</th>
                <th>Tarif</th>
                <th>Portefeuillevirtuel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarifResto in tarifRestos %}
            <tr>
                <td><a href="{{ path('tarifresto_show', { 'idTarif': tarifResto.idTarif }) }}">{{ tarifResto.idResto }}</a></td>
                <td>{{ tarifResto.tarif }}</td>
                <td>{{ tarifResto.portefeuilleVirtuel }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tarifresto_show', { 'idTarif': tarifResto.idTarif }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tarifresto_edit', { 'idTarif': tarifResto.idTarif }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tarifresto_new') }}">Create a new tarifResto</a>
        </li>
    </ul>
{% endblock %}
