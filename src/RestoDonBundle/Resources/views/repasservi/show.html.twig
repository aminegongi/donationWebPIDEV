{% extends 'front.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('front/scss/restoDon/css/root.css') }}">
{% endblock %}

{% block body %}
    <h1>Repasservi</h1>

    <table>
        <tbody>
            <tr>
                <th>Idresto</th>
                <td>{{ repasServi.idResto }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if repasServi.date %}{{ repasServi.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('repasservi_index') }}">Back to the list</a>
