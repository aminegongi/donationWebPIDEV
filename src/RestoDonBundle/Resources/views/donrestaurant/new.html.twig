{% extends 'front.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('front/scss/restoDon/css/root.css') }}">
    <link rel="stylesheet" href="{{ asset('front/scss/restoDon/css/restoDon.css') }}">
{% endblock %}

{% block body %}
    <div id="body">
    <h1 style="color: var(--my-color);">Donrestaurant creation</h1>
<div id="form" style="--first-color: var(--my-color); justify-content: center;">
    {{ form_start(form) }}



    <div class="form-group" style="display: none;">
        <label for="{{ form.idResto.vars.id }}">id Resto</label>
        <input type="text" style="border: solid 1px var(--my-color);" class="form-control" id="{{ form.idResto.vars.id }}" name="{{ form.idResto.vars.full_name }}" value="{{ user }}">
        {{ form_errors(form.idResto) }}
        {% do form.idResto.setRendered %}
    </div>

    <div class="form-group" style="display: flex; flex-direction: row; justify-content: center; width: 24%; margin-left: 37%; margin-right: 32%;">
        <label style="margin-left: 14%; margin-top: 3%; font-size: 20px;" for="{{ form.idUser.vars.id }}">Utilisateur</label>
        <input type="text" required style="border: solid 1px var(--my-color); width: fit-content; margin-left: 36%;" class="form-control" id="{{ form.idUser.vars.id }}" name="{{ form.idUser.vars.full_name }}" value="utilisateur">
        {{ form_errors(form.idUser) }}
        {% do form.idUser.setRendered %}
    </div>

    <div class="form-group" style="display: flex; flex-direction: row; justify-content: center; width: 24%; margin-left: 37%; margin-right: 32%;">
        <label style="margin-left: 14%; margin-top: 3%; font-size: 20px;" for="{{ form.montant.vars.id }}">Montant</label>
        <input type="number" style="border: solid 1px var(--my-color); width: fit-content; margin-left: 40%;" class="form-control" id="{{ form.montant.vars.id }}" name="{{ form.montant.vars.full_name }}" value="monnaie">
        {{ form_errors(form.montant) }}
        {% do form.montant.setRendered %}
    </div>

    <div class="form-group" style="display: none;">
        {{ form_label(form.date, 'Date') }}
        {{ form_widget(form.date) }}
        {{ form_errors(form.date) }}
        {% do form.date.setRendered %}
    </div>
    <div>
        <input class="button button-hero mt-4" style="color: white;" type="submit" value="Create"/>
    </div>
    {{ form_end(form) }}
</div>
    <ul style="margin-top: 5%;">
        <li>
            <a style="color: var(--my-color); letter-spacing: 0.4rem; font-weight: bold;" href="{{ path('donrestaurant_index') }}">Back to the list</a>
        </li>
    </ul>
    </div>
{% endblock %}


