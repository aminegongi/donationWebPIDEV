{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="login-slide slide login-style1">

<h2>Connexion</h2>

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
            <label class="label" for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" placeholder="user@donation.tn" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" />
        </div>
        <div class="form-group">
            <label class="label" for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;" name="_password" required="required" autocomplete="current-password" class="form-control"/>
        </div>
        <div class="form-group">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="custom-control-input" />
                <label class="custom-control-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>
        <div class="form-group">
            <input class="submit" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </form>
    <div class="sign-up-txt">
        Vous n'avez pas de Compte ?
        <a href="{{ path('fos_user_registration_register') }}" class="sign-up-click"> Inscription </a>
    </div>

    <div class="forgot-txt">
        <a href="{{ path('fos_user_resetting_request') }}" class="forgot-password-click">Forgot Password</a>
    </div>

    <div class="login-with">
        <h3>Inscription </h3>
        <ul class="social-login-btn">
            <li class="facebook-btn"><a href="#"><i class="ion-social-facebook"></i></a></li>
            <li class="twitter-btn"><a href="#"><i class="ion-social-twitter"></i></a></li>
            <li class="google-btn"><a href="#"><i class="ion-google-place"></i></a></li>
        </ul>
    </div>
</div>