{% endblock %}

{% block body %}
    <h1>Modifier votre demande d'aide</h1>

    {{ form_start(edit_form) }}




    <div style="display: none">
        <label for="{{ edit_form.idUser.vars.id }}">id User</label>
        <input type="text"  style="width: 200px; left: 50%;" class="form-control" id="{{ edit_form.idUser.vars.id }}" name="{{ edit_form.idUser.vars.full_name }}" value="{{ user }}">
        {{ form_errors(edit_form.idUser) }}

        {% do edit_form.idUser.setRendered %}
    </div>

    <div class="form-group" style="display: flex; flex-direction: row; justify-content: center; width: 32%; margin-left: 32%;">
        <label style=" font-size: 20px; width:100%;" for="{{ edit_form.idCategorie.vars.id }}">Categorie</label>


        {# <input type="text" style="width: 200px; left: 50%;" class="form-control" id="{{ form.idCategorie.vars.id }}" name="{{ form.idCategorie.vars.full_name }}" value="2">#}



        <select class="form-control"   style=" margin-left: 10%" id="{{ edit_form.idCategorie.vars.id }}" name="{{ edit_form.idCategorie.vars.full_name }}" >
            {% for element in categories %}
                {% if element != demandeAide.idCategorie %}
                <option value="{{  element.id }}" >{{element.Nom}}</option>
                {% endif %}
            {% endfor %}

            <option selected="selected" value="{{ catActualId  }}">
                {{demandeAide.idCategorie}}
            </option>
        </select>




        {{ form_errors(edit_form.idCategorie) }}

        {% do edit_form.idCategorie.setRendered %}
    </div>


    <div class="form-group" style="display: flex; flex-direction: row; justify-content: center; width: 32%; margin-left: 32%;" >
        <label style=" font-size: 20px; width:100%;" for="{{ edit_form.titre.vars.id }}">Titre</label>
        <input type="text" class="form-control"   type="text" style=" margin-left: 10%" id="{{ edit_form.titre.vars.id }}" name="{{ edit_form.titre.vars.full_name }}" value="{{demandeAide.titre}}">
        {{ form_errors(edit_form.titre) }}

        {% do edit_form.titre.setRendered %}
    </div>


    <div class="form-group" style="display: flex; flex-direction: row; justify-content: center; width: 32%; margin-left: 32%;" >
        <label style=" font-size: 20px; width:100%;" for="{{ edit_form.description.vars.id }}">Description</label>
        <textarea type="text" style=" margin-left: 10%" class="form-control" id="{{ edit_form.description.vars.id }}" name="{{ edit_form.description.vars.full_name }}" value="{{demandeAide.description}}" rows="4">{{demandeAide.description}}</textarea>

        {#<textarea class="form-control"   id="{{ form.description.vars.id }}" name="{{ form.description.vars.full_name }}"  style="margin-left: 10%;" rows="4"></textarea>#}
        {{ form_errors(edit_form.description) }}

        {% do edit_form.description.setRendered %}
    </div>


    <div class="form-group" style="display: flex; flex-direction: row; justify-content: center; width: 32%; margin-left: 32%;" >
        <label style=" font-size: 20px; width:100%;" for="{{ edit_form.photo.vars.id }}">Photo</label>
        <input type="file" style=" margin-left: 10% left: 50%;" class="form-control" id="{{ edit_form.photo.vars.id }}" name="{{ edit_form.photo.vars.full_name }}" value="{{demandeAide.photo}}">
       {# <img

                style="max-width:500px;width:100%;max-height:200px;"
                src="{{ asset('uploads/imagesAide/' ~ demandeAide.photo) }}"
                alt="Card image cap"
        />#}

        {{ form_errors(edit_form.photo) }}

        {% do edit_form.photo.setRendered %}
    </div>


    <div style="display: none">
        <label for="{{ edit_form.etat.vars.id }}">etat</label>
        <input type="text" style="width: 200px; left: 50%;" class="form-control" id="{{ edit_form.etat.vars.id }}" name="{{ edit_form.etat.vars.full_name }}" value="valide">
        {{ form_errors(edit_form.etat) }}

        {% do edit_form.etat.setRendered %}
    </div>



    <div style="display: none">
        <label for="{{ edit_form.nbReactions.vars.id }}">nbReactions</label>
        <input type="text" style="width: 200px; left: 50%;" class="form-control" id="{{ edit_form.nbReactions.vars.id }}" name="{{ edit_form.nbReactions.vars.full_name }}" value="0">
        {{ form_errors(edit_form.nbReactions) }}

        {% do edit_form.nbReactions.setRendered %}
    </div>


















