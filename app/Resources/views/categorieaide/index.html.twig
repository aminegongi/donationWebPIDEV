{% extends 'base.html.twig' %}


{% block content %}

    <h1>Liste des catégories des demandes d'aide <a class="btn btn-primary btn-sm"  style="margin-left: 10%; font-size: medium; background-color:#4CAF50"  href="{{ path('categorieaide_new') }}"> <i class="fa fa-plus-circle"> </i> Ajouter une catégorie</a></h1>
<div class="">
<div class="row">
    <div class="x_panel">
        <div class="x_content">
            <div class="clearfix"></div>
            <div class="clearfix"></div>
        {% for categorieAide in categorieAides %}

            <div class="col-md-4 col-sm-4  profile_details">
                <div class="well profile_view">
                    <div class="col-sm-12">
                        <h3 class="brief"><i>{{ categorieAide.nom }}</i></h3>
                        <div class="left col-sm-7">
                            <h2>Totale des demandes:{{ total[categorieAide.id][categorieAide.id] }}</h2>
                            <p><strong>confirmées: </strong> {{ totalConf[categorieAide.id][categorieAide.id] }}</p>
                            <p><strong>signalées: </strong>{{ totalSig[categorieAide.id][categorieAide.id] }}</p>
                        </div>
                        <div class="right col-sm-5 text-center">
                            <img src="{{ asset('uploads/imagesAide/' ~ categorieAide.icone) }}" alt="" class="img-circle img-fluid" style="max-width:100px;width:100%">
                        </div>
                    </div>
                    <div class=" bottom text-center">
                        <div class=" col-sm-6 emphasis">
                            <p class="ratings">
                                {% set catrating = rating[categorieAide.id][categorieAide.id] %}
                                <a>{{ catrating }}</a>
                                {% if catrating != 0 %}
                                {% for i in 1..catrating %}
                                    <a href="#"><span class="fa fa-star"></span></a>
                                {% endfor %}
                                {% endif %}

                                {% if catrating != 4 %}

                                {% set emptystar = 4-catrating %}

                                {% for i in 1..emptystar %}
                                    <a href="#"><span class="fa fa-star-o"></span></a>
                                {% endfor %}

                            {% endif %}
                                {#
                                <a href="#"><span class="fa fa-star"></span></a>
                                <a href="#"><span class="fa fa-star"></span></a>
                                <a href="#"><span class="fa fa-star"></span></a>#}
                               {# <a href="#"><span class="fa fa-star"></span></a>#}
                                {#<a href="#"><span class="fa fa-star-o"></span></a>#}
                            </p>
                        </div>
                        <div class=" col-sm-6 emphasis">

                            <a class="btn btn-primary btn-sm" href="{{ path('categorieaide_edit', { 'id': categorieAide.id }) }}"><i class="fa fa-cogs"> </i> Modifier</a>

                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}

        </div>
    </div>
</div>

</div>

{% endblock %}
